{
    "configurations": [
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django"
            },
            "envFile": "${workspaceFolder}/.env.dev"
        },
        {
           "name": "Django - Compose",
           "type": "debugpy",
           "request": "attach",
           "preLaunchTask": "Compose Up (Dev)",
           "postDebugTask": "Compose Down",
           "connect": {
             "port": 5678
           },
           "pathMappings": [
               {
                   "localRoot": "${workspaceFolder}",
                   "remoteRoot": "/app"
               }
           ]
       }
    ]
}